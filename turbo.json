{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "sync": {
      "dependsOn": [
        "^sync"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_RUNTIME",
    "CI",
    "NODE_ENV",
    "NEXT_PRIVATE_SENTRY_JS_ORG",
    "NEXT_PRIVATE_SENTRY_JS_PROJECT",
    "NEXT_PRIVATE_SENTRY_JS_METRICS_PATH",
    "NEXT_PRIVATE_SENTRY_AUTH_TOKEN",
    "NEXT_PUBLIC_DASHBOARD_BASE_URL",
    "NEXT_PUBLIC_GRAPHQL_API_URL",
    "NEXT_PUBLIC_SENTRY_JS_DSN"
  ]
}
