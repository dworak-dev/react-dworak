{
  "name": "@workspace/next-js-assets",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": "./src/assets-autogen.ts"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --outfile=dist/index.js --format=cjs",
    "sync": "node dist/index.js | pino-pretty",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@workspace/eslint-config": "*",
    "@workspace/typescript-config": "*",
    "@types/node": "^22.15.3",
    "esbuild": "^0.20.0",
    "eslint": "^9.29.0",
    "typescript": "5.8.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0"
  }
}
